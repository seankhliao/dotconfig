[advice]
	addIgnoredFile = false

[alias]
    a     = add

    b     = switch
    bd    = branch -D
    bn    = checkout -b

    c     = clone --recursive

    cam   = !git commit -a -m "\""$*"\"" && :
    camp  = !git commit -a -m "\""$*"\"" && git push && :
    cm    = !git commit    -m "\""$*"\"" && :
    cmp   = !git commit    -m "\""$*"\"" && git push && :

    cr    = codereview

    d     = diff
    dh    = diff HEAD

    l     = pull --rebase --autostash

    lo    = log --all --graph --format='%C(auto)%h %d %s %C(black)%ar/%cr %C(blue)<%an>'
    lob   = log --graph --format='%C(auto)%h %d %s %C(black)%ar/%cr %C(blue)<%an>'
    los   = log --all --graph --simplify-by-decoration --format='%C(auto)%h %d %s %C(black)%ar/%cr %C(blue)<%an>'

    p     = push

    s     = status

    t     = !git tag -m "\""$*"\"" "\""$*"\"" && :

[color "branch"]
	current = yellow reverse
	local   = yellow
	remote  = green

[color "diff"]
	meta = yellow  bold
	frag = magenta bold # line info
	old  = red          # deletions
	new  = green        # additions

[color "status"]
	added     = green
	changed   = yellow
    untracked = red

[core]
    pager = delta

[delta]
    file-decoration-style = none
    file-style            = bold yellow ul
    line-numbers          = true
    side-by-side          = true
    syntax-theme          = zenburn

[diff]
    algorithm = histogram
    renames = copies

[diff "sopsdiffer"]
    textconf = "sops -d"

[fetch]
    prune     = true
    pruneTags = true

[http]
	cookiefile = ~/.ssh/git/cookies

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictStyle = zdiff3

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[rebase]
    autoStash           = true
    abbreviateCommands  = true

[rerere]
    enabled = true

[tag]
    sort    = version:refname

[url "git@github.com:"]
	insteadOf = g:
	insteadOf = git://github.com/
    insteadOf = https://github.com/

[url "https://go.googlesource.com/"]
    insteadOf = go:

[versionsort]
    suffix = -

[include]
    path = local.gitconfig

[includeIf "hasconfig:remote.*.url:https://go.googlesource.com/*"]
    path = go.gitconfig

[includeIf "hasconfig:remote.*.url:git@github.com/seankhliao/opentelemetry*"]
