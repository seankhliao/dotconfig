[advice]
	addIgnoredFile = false

[alias]
    a     = add

    b     = switch
    bd    = branch -D
    bn    = checkout -b

    c     = clone --recursive

    cam   = !git commit -a -m "\""$*"\"" && :
    camp  = !git commit -a -m "\""$*"\"" && git push && :
    campu = !git commit -a -m "\""$*"\"" && git push -u origin HEAD && :
    cm    = !git commit    -m "\""$*"\"" && :
    cmp   = !git commit    -m "\""$*"\"" && git push && :
    cmpu  = !git commit    -m "\""$*"\"" && git push -u origin HEAD && :

    cr    = codereview

    d     = diff
    dh    = diff HEAD

    l     = pull --rebase --autostash

    lo    = log --all --graph --format='%C(auto)%h %d %s %C(black)%ar/%cr %C(blue)<%an>'
    lob   = log --graph --format='%C(auto)%h %d %s %C(black)%ar/%cr %C(blue)<%an>'
    los   = log --all --graph --simplify-by-decoration --format='%C(auto)%h %d %s %C(black)%ar/%cr %C(blue)<%an>'

    p     = push
    pu    = push -u origin HEAD

    s     = status

    t     = !git tag -m "\""$*"\"" "\""$*"\"" && :

[color "branch"]
	current = yellow reverse
	local   = yellow
	remote  = green

[color "diff"]
	meta = yellow  bold
	frag = magenta bold # line info
	old  = red          # deletions
	new  = green        # additions

[color "status"]
	added     = green
	changed   = yellow
    untracked = red

[commit]
    gpgSign = true

[core]
    pager = delta

[delta]
    file-decoration-style = none
    file-style            = bold yellow ul
    line-numbers          = true
    side-by-side          = true
    syntax-theme          = zenburn

[diff]
    algorithm = histogram
    renames = copies

[fetch]
    prune     = true
    pruneTags = true

[filter "ageencrypt"]
	clean    = age -r age14mg08panez45c6lj2cut2l8nqja0k5vm2vxmv5zvc4ufqgptgy2qcjfmuu -a -
	smudge   = age -d -i ~/.ssh/git/age.key -
	required = true

[gpg]
    format = ssh

[gpg "ssh"]
    allowedSignersFile = ~/.ssh/git/allowed_signers

[http]
	cookiefile = ~/.ssh/git/cookies

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictStyle = zdiff3

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[rebase]
    autoStash           = true
    abbreviateCommands  = true

[rerere]
    enabled = true

[tag]
    gpgSign = true
    sort    = version:refname

[url "git@github.com:"]
	insteadOf = g:
	insteadOf = git://github.com/
	insteadOf = https://github.com/

[url "git@github.com:seankhliao/"]
    insteadOf = s:
    insteadOf = git://github.com/seankhliao/
    insteadOf = https://github.com/seankhliao/

[url "arccy@soft-serve:"]
    insteadOf = ss:

[user]
    email = sean+git@liao.dev
    name  = Sean Liao
    signingKey = ~/.ssh/ssh/id_ed25519

[versionsort]
    suffix = -

[includeIf "hasconfig:remote.*.url:https://go.googlesource.com/*"]
    path = go.config
