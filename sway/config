# this is a comment
set {
    $mod    Mod4
    $left   Left
    $down   Down
    $up     Up
    $right  Right
    # $term   kitty
    # $menu   wofi

    $ws1 1:Alpha
    $ws2 2:Beta
    $ws3 3:Gamma
    $ws4 4:Delta
    $ws5 5:Zeta
    $ws6 6:Eta
    $ws7 7:Theta
    $ws8 8:Iota
    $ws9 9:Kappa
    $ws10 10:Lambda
}

font IBM Plex Mono 11

# background
# output * background $HOME/.ssh/bg.png fill
output * background $XDG_CONFIG_HOME/sway/bg.jpg fill

bindsym {
    # Screenshot
    Print                   exec grim -g "$(slurp)" "$HOME/data/screen/$(date +'%Y-%m-%d-%H%M%S').png"
    # $mod+n                  exec google-chrome-stable --incognito
    $mod+Shift+t            exec google-chrome-stable --user-data-dir="$HOME/.config/chrome-custom"
    $mod+Return             exec kitty
    $mod+c                  exec makoctl dismiss
    $mod+d                  exec wofi
    $mod+i                  exec kitty -T irc weechat
    $mod+s                  exec spotify
    $mod+t                  exec google-chrome-stable
    $mod+y                  exec yubioath-desktop

    XF86AudioRaiseVolume    exec pulsemixer --change-volume +5
    XF86AudioLowerVolume    exec pulsemixer --change-volume -5
    XF86AudioMute           exec pulsemixer --toggle-mute
    XF86MonBrightnessUp     exec brightnessctl -d intel_backlight set +10%
    XF86MonBrightnessDown   exec brightnessctl -d intel_backlight set 10%-
    # XF86AudioPlay           exec playerctl play-pause
    # XF86AudioPrev           exec playerctl previous
    # XF86AudioNext           exec playerctl next

    $mod+q                  kill
    $mod+h                  splith
    $mod+v                  splitv
    $mod+f                  fullscreen
    $mod+Shift+space        floating toggle
    $mod+space              focus mode_toggle
    $mod+Shift+grave        move scratchpad
    $mod+grave              scratchpad show

    $mod+$left              focus left
    $mod+$down              focus down
    $mod+$up                focus up
    $mod+$right             focus right
    # $mod+a                  focus parent

    $mod+Shift+$left        move left
    $mod+Shift+$down        move down
    $mod+Shift+$up          move up
    $mod+Shift+$right       move right

    $mod+Tab            workspace next
    $mod+Shift+Tab      workspace prev
    $mod+1              workspace $ws1
    $mod+2              workspace $ws2
    $mod+3              workspace $ws3
    $mod+4              workspace $ws4
    $mod+5              workspace $ws5
    $mod+6              workspace $ws6
    $mod+7              workspace $ws7
    $mod+8              workspace $ws8
    $mod+9              workspace $ws9
    $mod+0              workspace $ws10

    $mod+Shift+1 move container to workspace $ws1
    $mod+Shift+2 move container to workspace $ws2
    $mod+Shift+3 move container to workspace $ws3
    $mod+Shift+4 move container to workspace $ws4
    $mod+Shift+5 move container to workspace $ws5
    $mod+Shift+6 move container to workspace $ws6
    $mod+Shift+7 move container to workspace $ws7
    $mod+Shift+8 move container to workspace $ws8
    $mod+Shift+9 move container to workspace $ws9
    $mod+Shift+0 move container to workspace $ws10

    $mod+r mode "resize"

    $mod+Shift+r            reload
    $mod+Shift+e            exit
    $mod+l                  exec swaylock
}


# resize
mode "resize" {
    bindsym $up     resize grow     height  10 px or 10 ppt
    bindsym $down   resize shrink   height  10 px or 10 ppt
    bindsym $left   resize shrink   width   10 px or 10 ppt
    bindsym $right  resize grow     width   10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# gaps
gaps {
    inner 5
    outer 0
}
smart_gaps          on
smart_borders       on
default_border pixel 1

# bar
bar {
    status_command      i3status
    position            top
    workspace_buttons   yes
}

# floating
for_window [title="wl-clipboard"] floating enable
for_window [class="Vncviewer"] fullscreen enable
assign [class="Spotify"] workspace $ws9
assign [title="irc"] workspace $ws10

input "1739:30382:DLL0704:01_06CB:76AE_Touchpad" {
    tap                 enabled
    natural_scroll      enabled
    middle_emulation    enabled
}

exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
